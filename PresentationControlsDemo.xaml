<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Controls.PresentationControlsDemo"
             Title="PresentationControlsDemo">
    <ScrollView>
        <VerticalStackLayout>
            <BoxView BackgroundColor="AntiqueWhite" HeightRequest="50" Margin="10"/>

            <Ellipse Fill="Red"
                 Stroke="Green"
                 StrokeThickness="10"
                 HeightRequest="50"
                 WidthRequest="100"/>
            <Line Stroke="Green"
              X1="500"
              Y1="30"
              X2="0"
              Y2="30"/>

            <Rectangle Fill="red"
                   HeightRequest="100"
                   WidthRequest="200"
                   RadiusX="20"
                   RadiusY="5"
                   Margin="0,10,0,0"/>

            <Polygon Fill="Red" Points="40, 10 70, 80 10, 50"/>

            <Border Margin="0,10,0,0"
                Stroke="Red"
                StrokeThickness="5"
                Padding="10">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10,10,10,10"/>
                </Border.StrokeShape>
                <Label Text="TEST" 
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"/>
            </Border>

            <Frame Margin="10" Background="AntiqueWhite">
                <Image Source="dotnet_bot.png" />
            </Frame>

            <WebView HeightRequest="500"
                 Source="https://www.google.it/"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>